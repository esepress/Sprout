{
  "name": "zion",
  "description": "Web template crafting machine",
  "main": "gulpfile.js",
  "authors": [
    "Ashraful Prium <prium47@gmail.com>"
  ],
  "license": "ISC",
  "keywords": [
    "web",
    "templating",
    "workflow",
    "automation"
  ],
  "homepage": "https://github.com/prium/ZiON",
  "private": true,
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "dependencies": {
    "jquery": "^3.1.0",
    "bootstrap": "^3.3.6",
    "skrollr": "^0.6.30",
    "owl.carousel": "^2.2.0",
    "ajaxchimp": "^1.3.0"
  },
  "overrides": {
    "bootstrap": {
      "main": "./dist/**/*.*"
    },
    "waypoints": {
      "main": [
        "./lib/jquery.waypoints.js",
        "./lib/shortcuts/inview.js"
      ]
    },
    "pace": {
      "main": [
        "./pace.min.js",
        "./themes/**/*"
      ]
    },
    "magnific-popup": {
      "main": [
        "./dist/jquery.magnific-popup.js",
        "./dist/magnific-popup.css"
      ]
    },
    "masonry": {
      "main": "./dist/masonry.pkgd.js"
    },
    "imagesloaded": {
      "main": "imagesloaded.pkgd.js"
    },
    "isotope": {
      "main": "./dist/isotope.pkgd.js"
    },
    "FlexSlider": {
      "main": [
        "jquery.flexslider.js",
        "flexslider.css",
        "./fonts/*"
      ]
    }
  }
}
